    "test": "npm run build && ava 'build/**/*-test.js'"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@types/express": "^4.16.0",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "@types/request": "^2.47.1",
    "@types/supertest": "^2.0.5",
    "ava": "^0.25.0",
    "clang-format": "^1.2.4",
    "express": "^4.16.3",
    "supertest": "^3.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
