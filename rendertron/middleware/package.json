{
  "name": "rendertron-middleware",
  "version": "0.1.5",
  "description": "Express middleware for the rendertron service.",
  "engines": {
    "node": ">=6"
  },
  "main": "build/middleware.js",
  "types": "build/middleware.d.ts",
  "scripts": {
